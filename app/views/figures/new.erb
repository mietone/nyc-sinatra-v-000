<h1>Create a New Figure</h1>

<form action="/figures" method="post">
  <label for="figure_name">Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name">

  <br><br>

  <label>Title(s): </label>
  <% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%=title.id%>"><%= title.name %>
  <% end %>

  <br><br>

  <label for="new_title">Create New Title: </label>
  <input type="text" name="title[name]" id="new_title">

  <br><br>

  <label>Landmark(s): </label>
  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%=landmark.id%>"><%= landmark.name %>
  <% end %>

  <br><br>

  <label for="new_landmark">Create New Landmark: </label>
  <label for="new_landmark">Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label for="year_completed">Year Completed: </label>
  <input type="number" name="landmark[year_completed]" id="year_completed">


  <br><br>

  <input type="submit" value=" Create New Figure ">

</form>
